<%- include ("./partials/_header") %>

<div class="container">
    <div class="row">
        <!--FORM-->
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/delete/<%= post._id   %>" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="title" placeholder="<%= post.title   %>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="author" placeholder="<%= post.author   %>">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="post_data" cols="100" rows="10" placeholder="<%= post.post_data %>"></textarea>
                        </div>
                        <button class="btn btn-primary" type="submit">
                            Delete 
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ("./partials/_footer") %>